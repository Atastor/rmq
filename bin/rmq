#!/usr/bin/env ruby

unless ARGV.length == 2
  puts 'RMQ - Invalid command, do something like this: rmq create my_new_app'
  exit
end


action = ARGV[0]
value = ARGV[1]

case action
when 'create'
  `motion create --template=git@github.com:infinitered/rmq-template.git #{value}`
else
  puts 'RMQ - Invalid action'
end
